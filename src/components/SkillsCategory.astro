---
const { title } = Astro.props;
---

<div>
  <h4>{title}</h4>
  <ul role="list">
    <slot />
  </ul>
</div>

<style>
  div {
    display: grid;
    grid-template-columns: subgrid;
    column-gap: var(--space-l);
    align-items: start;
    padding: var(--space-m) var(--space-s);
    border-top: solid thin var(--black-300);

    h4 {
      grid-column: title;
      font-size: var(--step-1);
      color: var(--black-400);
    }

    ul {
      grid-column: list;
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-xs);
      margin: 0;

      li {
        font-size: var(--step-1);
        padding: 0;
        margin: 0;
      }

      & > li:not(:last-child) {
        &::after {
          content: ",";
        }
      }
    }

    @container (width < 350px) {
      grid-template-columns: 1fr;
      column-gap: 0;
      row-gap: var(--space-m);
    }
  }
</style>
