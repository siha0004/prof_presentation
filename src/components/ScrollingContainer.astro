---
import ProjectsCard from "./ProjectsCard.astro";

const { cardData } = Astro.props;
---

<ul role="list">
  {cardData.values.map((project) => <ProjectsCard {project} />)}
</ul>

<style>
  @layer components {
    ul {
      display: flex;
      gap: var(--space-m);
      overflow-x: auto;
      grid-column: full;
      padding-inline: max(1rem, 50% - var(--content-width) / 2);
      scroll-snap-type: x mandatory;

      li {
        scroll-snap-align: center;
      }
    }
  }
</style>
