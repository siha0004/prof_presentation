---
import SkillsCategory from "./SkillsCategory.astro";
---

<article>
  <small>Jeg er dygtig til</small>
  <SkillsCategory title="Værktøjer">
    <li>Figma</li>
    <li>UX/UI</li>
    <li>Github</li>
    <li>Codepen</li>
    <li>Adobe Illustrator</li>
  </SkillsCategory>
  <SkillsCategory title="Sprog">
    <li>HTML</li>
    <li>CSS</li>
    <li>Javascript</li>
    <li>Astro</li>
    <li>React</li>
  </SkillsCategory>
  <SkillsCategory title="Metoder">
    <li>Designsystemer</li>
    <li>Design Thinking</li>
    <li>Projektstyring</li>
  </SkillsCategory>
</article>

<style>
  article {
    display: grid;
    grid-template-columns: [title]auto [list]auto;
    container-type: inline-size;

    > * {
      grid-column: 1 / -1;
    }

    &:last-child {
      border-bottom: solid thin var(--beige-darker);
    }
  }
</style>
